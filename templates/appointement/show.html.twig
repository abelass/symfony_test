{% extends 'base.html.twig' %}

{% block title %}Appointement{% endblock %}

{% block body %}
    <h1>Appointement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ appointement.title }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ appointement.comment }}</td>
            </tr>
            <tr>
                <th>Date_begin</th>
                <td>{{ appointement.dateBegin ? appointement.dateBegin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ appointement.dateEnd ? appointement.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('appointement_index') }}">back to list</a>

    <a href="{{ path('appointement_edit', {'id': appointement.id}) }}">edit</a>

    {{ include('appointement/_delete_form.html.twig') }}
{% endblock %}
